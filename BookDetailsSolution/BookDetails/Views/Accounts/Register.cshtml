@model BookDetails.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<div class="row">
    <div class="col-12">
        <h5 class="offset-2"> User Registion</h5>
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Username, new { @class = "col-form-label col-2 text-end" })
                <div class="col-4">
                    @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.Password, new { @class = "col-form-label col-2 text-end" })
                <div class="col-4">
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                @Html.LabelFor(x => x.ConfirmPassword, new { @class = "col-form-label col-2 text-end" })
                <div class="col-4">
                    @Html.TextBoxFor(x => x.ConfirmPassword, new { @class = "form-control" })
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">

                <div class="col-4 offset-2">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </div>
        </form>
    </div>
</div>