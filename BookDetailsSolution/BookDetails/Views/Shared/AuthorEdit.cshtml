@model BookDetails.Models.Author

<div class="form-group row mb-2">
    <label asp-for="AuthorName" class="control-label"></label>
    <div class="col-12">
        <input asp-for="AuthorName" class="form-control" />
        <span asp-validation-for="AuthorName" class="text-danger"></span>
    </div>
</div>
<div class="form-group row mb-2">
    <label asp-for="BirthDate" class="control-label"></label>
    <div class="col-12">
        @Html.TextBoxFor(b => b.BirthDate, new { @class = "form-control", @type="date" })
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
</div>
<div class="form-group row mb-2">
    <label asp-for="WebsiteUrl" class="control-label"></label>
    <div class="col-12">
        <input asp-for="WebsiteUrl" class="form-control" />
        <span asp-validation-for="WebsiteUrl" class="text-danger"></span>
    </div>
</div>
<div class="form-group row mb-2">
    <label asp-for="Phone" class="control-label"></label>
    <div class="col-12">
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
</div>
<div class="form-group row mb-2">
    <label asp-for="Email" class="control-label"></label>
    <div class="col-12">
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
</div>
<div class="form-group row mb-2">
    <label asp-for="Picture" class="control-label"></label>
    <div class="col-12">
        @Html.TextBoxFor(b => b.Picture, new { @class = "form-control" })
        @* <input type="file" class="form-control" />
        <input type="hidden" asp-for="Picture" />*@
        <span asp-validation-for="Picture" class="text-danger"></span>
    </div>
</div>
