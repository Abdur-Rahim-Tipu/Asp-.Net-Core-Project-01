
@model BookDetails.Models.Book

<div class="form-group row mb-2">
        <label asp-for="Title" class="control-label"></label>
    <div class="col-12">
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
</div>
<div class="form-group row mb-2">
    <label asp-for="PublishDate" class="control-label"></label>
    <div class="col-12">
        @Html.TextBoxFor(b => b.PublishDate, new { @class = "form-control", @type="date" })
        <span asp-validation-for="PublishDate" class="text-danger"></span>
    </div>
</div>
<div class="form-group row mb-2">
    <label asp-for="TotalPage" class="control-label"></label>
    <div class="col-12">
        <input asp-for="TotalPage" class="form-control" />
        <span asp-validation-for="TotalPage" class="text-danger"></span>
    </div>
</div>
<div class="form-group row mb-2">
    <label asp-for="CoverPrice" class="control-label"></label>
    <div class="col-12">
        <input asp-for="CoverPrice" class="form-control" />
        <span asp-validation-for="CoverPrice" class="text-danger"></span>
    </div>
</div>
<div class="form-group form-check">
    <label class="form-check-label">
        <input class="form-check-input" asp-for="IsStock" /> @Html.DisplayNameFor(model => model.IsStock)
    </label>
</div>
<div class="form-group row mb-2">
    <label asp-for="CoverPage" class="control-label"></label>
    <div class="col-12">
        <input type="file" class="form-control" />
        <input type="hidden" asp-for="CoverPage" />
        <span asp-validation-for="CoverPage" class="text-danger"></span>
    </div>
</div>